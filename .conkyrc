background yes
use_xft yes
xftfont cure:size=7
xftalpha 1
update_interval 1.0
update_interval_on_battery 5.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints undecorated,below,skip_taskbar,skip_pager
double_buffer yes
minimum_size 170 170
maximum_width 150
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
#stippled_borders yes
default_color FFFFFF
default_shade_color 010101
default_outline_color FFFFFF
alignment top_right
#gap_x 18
gap_y 0
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no
 
TEXT
 
${font cure:size=12}${time %d %B %Y}
${font cure:size=14}${time %I:%M%p}
${font cure:size=7}BATTERY
${battery_percent}% ${battery_bar}

${font cure:size=7}PROCESSORS
TEMP: ${hwmon 2 temp 1}C
CPU1: ${cpu cpu1}% ${cpubar cpu1}
CPU2: ${cpu cpu2}% ${cpubar cpu2}
CPU3: ${cpu cpu3}% ${cpubar cpu3}
CPU4: ${cpu cpu4}% ${cpubar cpu4}
 
${font cure:size=7}MEMORY
${font cure:size=7}RAM $alignc $mem / $memmax $alignr $memperc%
$membar
 
${font cure:size=7}DISK
Root $alignc ${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /}%
${fs_bar 6 /}
Root $alignc ${fs_used /home} /home ${fs_size /home} $alignr ${fs_used_perc /home}%
${fs_bar 6 /home}
